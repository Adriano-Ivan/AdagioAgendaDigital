<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="88dp"
        android:layout_weight="6"
        android:layout_marginRight="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/task_list_priority"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:cardCornerRadius="15dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/item_task_description"
                android:maxWidth="270dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_task_initial_moment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line"/>
            <TextView
                android:id="@+id/item_task_limit_moment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/item_task_priority_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone"
            />


    </LinearLayout>

<!--    <View-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"/>-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2.1">
        <TextView
            android:id="@+id/item_task_finish_task"
            android:clickable="true"
            android:background="@drawable/custom_border_green"
            android:padding="8dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_margin="8dp"
            android:text="@string/item_task_finish_task"
            />

        <TextView
            android:id="@+id/item_task_not_finish_task"
            android:clickable="true"
            android:backgroundTint="@null"
            android:padding="8dp"
            android:textColor="@color/adagio_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:text="@string/item_task_not_finish_task"
            />
    </LinearLayout>

</LinearLayout>