<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="25dp"
    android:fillViewport="true"

    xmlns:android="http://schemas.android.com/apk/res/android"

    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.main.fragments.tasks.TaskManagementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >

        <LinearLayout
            android:id="@+id/fragment_task_container_options"
            android:orientation="vertical"
            android:background="@drawable/custom_border_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_task_order_by_date"
                    android:textSize="@dimen/labelSimple"/>

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                   android:id="@+id/fragment_task_order_datetime_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:orientation="vertical">
                    <RadioButton android:id="@+id/fragment_task_order_by_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/fragment_task_order_by_today"
                        android:textSize="@dimen/labelSimple"
                        android:buttonTint="@color/adagio_gray"
                        />
                        <RadioButton android:id="@+id/fragment_task_order_by_initial_moment_asc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/fragment_task_initial_moment"
                            android:drawableRight="@android:drawable/arrow_up_float"
                            android:textSize="@dimen/labelSimple"
                            android:buttonTint="@color/adagio_gray"
                      />
                        <RadioButton android:id="@+id/fragment_task_order_by_limit_moment_asc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/fragment_task_limit_moment"
                            android:drawableRight="@android:drawable/arrow_up_float"
                            android:textSize="@dimen/labelSimple"
                            android:buttonTint="@color/adagio_gray"
                       />

                        <RadioButton android:id="@+id/fragment_task_order_by_initial_moment_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/fragment_task_initial_moment"
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:textSize="@dimen/labelSimple"
                            android:buttonTint="@color/adagio_gray"
                         />
                        <RadioButton android:id="@+id/fragment_task_order_by_limit_moment_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/fragment_task_limit_moment"
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:textSize="@dimen/labelSimple"
                            android:buttonTint="@color/adagio_gray"
                         />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/fragment_task_order_by_priority"
                    android:textSize="@dimen/labelSimple" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/fragment_task_order_by_priority_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/fragment_task_order_by_priority_asc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginRight="8dp"
                        android:text="@string/fragment_task_order_by_priority_asc"
                        android:textSize="@dimen/labelSimple"
                        android:buttonTint="@color/adagio_gray"
                        />
                    <RadioButton android:id="@+id/fragment_task_order_by_priority_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/fragment_task_order_by_priority_desc"
                        android:textSize="@dimen/labelSimple"
                        android:buttonTint="@color/adagio_gray"
                      />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/fragment_task_update_list"
                    android:layout_width="wrap_content"
                    android:background="@drawable/custom_border_grey"
                    app:backgroundTint="@null"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="12dp"
                    android:textSize="@dimen/labelSimple"
                    android:text="@string/fragment_task_update_list"
                    android:textStyle="bold"
                    android:textColor="@color/adagio_purple"
                    />
                <Button
                    android:id="@+id/fragment_task_user_wants_to_create_task"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_border_grey"
                    app:backgroundTint="@null"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/labelSimple"
                    android:text="@string/fragment_task_user_wants_to_create_task"
                    android:textStyle="bold"
                    android:textColor="@color/adagio_purple"
                    />
            </LinearLayout>

        </LinearLayout>

        <!--
        <Button
            android:id="@+id/fragment_task_hide_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:backgroundTint="@android:color/transparent"
            android:gravity="right"

            android:layout_gravity="right"
            android:text="@string/fragment_task_hide_options"
            android:shadowColor="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"
            />
        -->
        <Button
            android:id="@+id/fragment_task_hide_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:background="@drawable/custom_border_lighter_blue"
            app:backgroundTint="@null"
            android:text="@string/fragment_task_hide_options"
            android:textSize="@dimen/labelSimple"
            android:layout_margin="4dp"

            />

        <LinearLayout
            android:id="@+id/fragment_task_container_pagination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/fragment_task_management_previous_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_baseline_navigate_before_24"
                    android:layout_marginRight="4dp"
                    android:backgroundTint="@android:color/transparent"
                    />

                <ImageButton
                    android:id="@+id/fragment_task_management_previous_page_disabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_baseline_navigate_before_gray_24"
                    android:layout_marginRight="4dp"
                    android:backgroundTint="@android:color/transparent"
                />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/fragment_task_management_text_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/fragment_task_management_next_page_disabled"
                    android:layout_width="wrap_content"
                    android:tooltipText="@string/task_next_page"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_baseline_navigate_next_gray_24"
                    android:layout_marginRight="4dp"
                    android:backgroundTint="@android:color/transparent"
                />

                <ImageButton
                        android:id="@+id/fragment_task_management_next_page"
                        android:layout_width="wrap_content"
                        android:tooltipText="@string/task_next_page"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_navigate_next_24"
                        android:layout_marginRight="4dp"
                        android:backgroundTint="@android:color/transparent"
                        />
        </LinearLayout>

        <ListView
            android:id="@+id/fragment_task_list_tasks"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/listViewMarginBottom"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_task_fab_button_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_add_24"
        android:contentDescription="@string/fragment_task_user_wants_to_create_task"
        android:layout_margin="16dp"
        android:backgroundTint="@color/adagio_purple"
        app:tint="@android:color/white"/>

</RelativeLayout>

</ScrollView>