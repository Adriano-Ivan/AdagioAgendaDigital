<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <RadioGroup
            android:id="@+id/relatoryTypeRdg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:backgroundTint="@color/weak_white"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:checkedButton="@id/relatoryFinishingRdb">
            <RadioButton
                android:id="@+id/relatoryPriorityRdb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority"
                android:textSize="@dimen/labelSimple"
                android:textColor="@color/adagio_purple_grey"
                android:textStyle="bold"
                android:buttonTint="@color/adagio_purple"/>
            <RadioButton
                android:id="@+id/relatoryFinishingRdb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finishing"
                android:textSize="@dimen/labelSimple"
                android:textColor="@color/adagio_purple_grey"
                android:textStyle="bold"
                android:buttonTint="@color/adagio_purple"/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>