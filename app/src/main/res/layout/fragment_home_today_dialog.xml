    <Button
        android:id="@+id/tasks_of_day_create_task_in_this_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:text="@string/tasks_of_day_create_task_in_this_day"
        app:backgroundTint="@null"
        android:layout_margin="16dp"
        android:background="@drawable/custom_border_lighter_blue"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="right|bottom">
        <Button
            android:id="@+id/tasks_of_day_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:textColor="@color/adagio_purple"
            android:layout_marginRight="8dp"
            app:backgroundTint="@color/white"
            android:background="@drawable/custom_border_white_left"
            />
        <Button
            android:id="@+id/tasks_of_day_save_finished_or_not_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            app:backgroundTint="@null"
            android:background="@drawable/custom_border_lighter_blue"
            android:layout_marginRight="8dp"
            />
