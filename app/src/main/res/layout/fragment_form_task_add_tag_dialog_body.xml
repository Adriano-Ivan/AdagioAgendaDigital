    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:minHeight="130dp"
        android:paddingTop="8dp"
        android:maxHeight="210dp"
        >

    <LinearLayout
        android:id="@+id/fragment_tags_to_task_container_pagination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fragment_tags_to_task_previous_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_baseline_navigate_before_24"
            android:layout_marginRight="4dp"
            android:backgroundTint="@android:color/transparent"
            />

        <ImageButton
            android:id="@+id/fragment_tags_to_task_previous_page_disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_baseline_navigate_before_gray_24"
            android:layout_marginRight="4dp"
            android:backgroundTint="@android:color/transparent"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/fragment_tags_to_task_text_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/fragment_tags_to_task_next_page_disabled"
            android:layout_width="wrap_content"
            android:tooltipText="@string/task_next_page_disabled"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_navigate_next_gray_24"
            android:layout_marginRight="4dp"
            android:backgroundTint="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/fragment_tags_to_task_next_page"
            android:layout_width="wrap_content"
            android:tooltipText="@string/task_next_page"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:layout_marginRight="4dp"
            android:backgroundTint="@android:color/transparent"
            />
         </LinearLayout>

        <ListView
            android:id="@+id/fragment_form_add_tag_body_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

        />

    </LinearLayout>

