<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContainerFragments">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container_fragments_login_container</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">30</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:backgroundTint">@color/adagio_purple</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name ="Theme.AppCompat.Light.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:windowBackground">@drawable/custom_dialog_gradient</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="DatePickerColor" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/custom_dialog_gradient</item>
        <item name="colorAccent">@color/adagio_purple</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:paddingTop">0.7sp</item>
        <item name="android:paddingBottom">0.7sp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/adagio_purple</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="PositiveButtonStyle"  parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">@drawable/custom_border_lighter_blue</item>
        <item name="backgroundTint">@color/adagio_purple</item>
        <item name="android:textColor">@color/adagio_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/adagio_purple</item>
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>